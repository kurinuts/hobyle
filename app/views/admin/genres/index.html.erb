<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4>ジャンル投稿</h4>
      <div class="new-genres">
        <%= form_with model: Genre.new, url: admin_genres_path do |f| %>
        <%= f.text_field :name %>
        <%= f.submit '投稿' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <table class="table">
        <tr>
          <th>ジャンル名</th>
          <th>ジャンル詳細</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %><br>
              <% if genre.image.attached? %>
              <%= image_tag genre.image, size: "100x90"%>
              <% else %>
              <%= image_tag 'no_image', size: "100x90" %>
              <% end %>
          </td>
          <% @secondgenres.each do |secondgenre| %>
            <% if secondgenre.genre_id == genre.id %>
          <td><%= secondgenre.name %></td>
            <% end %>
          <% end %>
          <td>
            <%= link_to "詳細", admin_genre_path(genre.id), class: "btn btn-outline-primary btn-block-xs" %><br>
            <%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-outline-success btn-block-xs" %><br>
            <%= link_to "削除", admin_genre_path(genre), method: :delete, class: "btn btn-outline-danger btn-block-xs" %>
          </td>
        </tr>
  　　    <% end %>
      </table>
    </div>
  </div>
</div>
<style>
.row {
  margin-top: 10px;
}
img {
  border-radius: 50%;
  object-fit: cover;
  img-align: center;
  text-align: center;

  }
</style>
