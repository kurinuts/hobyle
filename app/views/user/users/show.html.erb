
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <% if @user == current_user %>
      <h4> </h4>
      <h2><strong>Hello! <%= @user.user_name %> さん</strong></h2>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h4 class="button1"><strong><%= link_to "趣味活スケジュール", user_path(current_user), :style=>"color: sienna;" %></strong></h4>
          </div>
          <div class="col-md-6">
            <h4 class="button2"><strong><%= link_to "企画イベント歴", my_events_path, :style=>"color: sienna;" %></strong></h4>
          </div>
        </div>
      </div>
      <table class="table" style="font-size : 15px;">
        <tr>
          <th>ステータス</th>
          <th>タイトル</th>
          <th>日程</th>
          <th>主催者</th>
        </tr>
        <% @event_users.each do |event_user| %>
        <tr>
          <td><%= EventUser.statuses_i18n[event_user.status] %></td>
          <td><%= link_to event_user_path(event_user.id) do %><%= event_user.event.title %><% end %></td>
          <td><%= event_user.event.daytime.strftime('%Y年%m月%d日 %H:%M') %></td>
          <td><%= event_user.event.user.user_name%></td>
        </tr>
        <% end %>
      </table>
      <% else %>
      <h4> </h4>
      <h2><strong><%= @user.user_name %></strong>さんの企画イベント履歴</h2>

      <table class="table">
        <tr>
          <th>開催日</th>
          <th>タイトル</th>
          <th>場所</th>
          <th></th>
        </tr>
        <% @events.each do |event| %>
        <tr>
          <td><%= event.daytime.strftime('%Y年%m月%d日 %H:%M') %></td>
          <td><%= link_to event_path(event) do %><%= event.title %><% end %></td>
          <td><%= event.place %></td>
          <td>詳細画面</td>
        </tr>
        <% end %>
      </table>
        <% end %>

    </div>
    <div class="col-md-5">
      <table class="table", border=1 frame="box">
        <tr>
          <th>プロフィール画像</th>
          <td>
          <% if @user.image.attached? %>
          <%= image_tag @user.image, size: "100x100" %>
          <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
          </td>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <td><%= @user.user_name %><%= @user.age %></td>
        </tr>
        <tr>
          <th>お住まい</th>
          <td><%= @user.address_free %> <%= @user.address %></td>
        </tr>
        <tr>
          <th>自己紹介文</th>
          <td><%= @user.user_introduction %></td>
        </tr>
      </table>
      <div class="edit">
        <% if @user == current_user %>
        <%= link_to edit_user_path(@user), class: "btn btn-secondary btn-block" do %>
        <i class="fas fa-user-cog fa-lg"></i>
        <% end %><% end %>
      </div>
    </div>



<style>
img {
  border-radius: 50%;  /* 角丸半径を50%にする(=円形にする) */
  width: 100px;  /* 縦横を同じ値にする */
  height: 100px;  /* 縦横を同じ値にする */
  object-fit: cover; /* 縦横比固定したまま上2つの縦横の範囲内に収まるように配置する */
}

h2 {
  background-color: tan;
  color: lightyellow;
  text-align: center;
}

.table {
  margin-top: 10px;
}
.button1 {
  background-color: wheat;
  text-align: center;
  height: 50px;
  padding-top: 10px;
  border-radius: 10%;
}

.button2 {
  background-color: wheat;
  text-align: center;
  border-radius: 10%;
}



.link {
  color: white;
}
</style>