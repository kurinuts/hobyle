編集画面
<div class="edit-user">
  <% if @user == current_user %>
  <%= form_with model: @user do |f| %>
  <table class="usre-information">
    <tr>
      <th>氏名</th><td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
    </tr>

    <tr>
      <th>ユーザー名</th>
      <td><%= f.text_field :user_name %></td>
    </tr>

    <tr>
      <th>お住まい</th>
      <td><%= f.text_field :address_free %> <%= f.text_field :address %></td>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, autocomplete: "email" %></td>
    </tr>

    <tr>
      <th>電話番号</th>
      <td><%= f.number_field :phone_number %></td>
    </tr>

    <tr>
      <th>自己紹介文</th>
      <td><%= f.text_field :user_introduction %></td>
    </tr>

  </table>
  <%= f.submit '変更内容を保存する', class: "btn btn-outline-success" %><% end %>
  <% end %>
</div>