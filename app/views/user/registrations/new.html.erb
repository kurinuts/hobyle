<h2></h2>
<h2><strong>新規登録</strong></h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <table class="table">
      <tr>
        <th>姓</th>
        <td>
          <div class="field">
          <%= f.text_field :last_name, placeholder: "必須" %>
        </td>
        <th>名</th>
        <td>
        <div class="field">
        <%= f.text_field :first_name, placeholder: "必須" %>
        </td>
      </tr>
      <tr>
        <th>ユーザー名</th>
        <td><%= f.text_field :user_name, placeholder: "必須" %></td>
        <th></th>
        <td></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "必須" %>
        </td>
        <th></th>
        <td></td>
      </tr>
      <tr>
        <th>パスワード</th>
        <td>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "必須" %>
        </td>
        <th>
          <% if @minimum_password_length %>
          <em>(最低<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </th>
        <td></td>
      </tr>
      <tr>
        <th>パスワード確認</th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "必須" %>
        </td>
        <th>
          <% if @minimum_password_length %>
          <em>(最低<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </th>
        <td></td>
      </tr>
      <tr>
        <th>携帯電話番号</th>
        <td><%= f.number_field :phone_number, placeholder: "ハイフンなし", placeholder: "必須" %></td>
        <th></th>
        <td></td>
      </tr>
      <tr>
        <th>お住まいの都道府県名</th>
        <td><%= f.text_field :address_free, placeholder: "必須" %></td>
        <th>お住まいの市区町村名</th>
        <td><%= f.text_field :address, placeholder: "必須" %></td>
      </tr>
      <tr>
        <th>自己紹介文</th>
        <td><%= f.text_area :user_introduction %></td>
      </tr>
    </table>

  <div class="actions">
    <input class="radius-percent" type="submit" value="新規登録">
  </div>
<% end %>

<style>
  .table {
    width: 100%%;
    text-align: center;
  }

  h2 {
  background-color: tan;
  color: lightyellow;
  text-align: center;
  }

  .radius-percent {
  background-color: darkkhaki;
  color: lemonchiffon;
  border: none;
  border-bottom: solid 3px gray;
  border-radius: 3px;
  box-shadow: 0px 3px 5px lightgray;
  transition: 0.2s;
}

 .radius-percent:active {
   transform: translateY(2px);
 }
</style>