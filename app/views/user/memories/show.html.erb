<h2></h2>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <tr>
          <h2><strong><%= @memory.title %></strong></h2>
        </tr>
        <tr>
          <th>イベント名</th><td><%= @memory.event.title %></td>
        </tr>
        <tr>
          <th>参加日時</th><td><%= @memory.event.daytime.strftime('%Y年%m月%d日 %H:%M') %></td>
        </tr>
        <tr>
          <% if user_signed_in? %>
          <th>イベント企画者</th><td><%= link_to user_path(@user2),class: "link" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="bi bi-arrow-right-square" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm4.5 5.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"/></svg>
          <%= @memory.event.user.user_name %><% end %></td>
          <% else %>
          <th>イベント企画者</th><td><%= @memory.event.user.user_name %></td>
          <% end %>
        </tr>
      </table>

    <div class="memory" style="padding: 10px; margin-top: 100px; margin-bottom: 10px; border: 1px dotted #333333;">
      <h3><%= @memory.comment %></h3><br>
      <% if user_signed_in? %>
      <p>投稿者<%= link_to user_path(@user) do %>@<%= @memory.user.user_name %>さん<% end %></p>
      <% else %>
      <p>投稿者@<%= @memory.user.user_name %>さん</p>
      <% end %>

    </div>
    </div>
    <div class="col-md-6">
      <div class="image2">
      <% if @memory.image.attached? %>
      <%= image_tag @memory.image, size: "500x400" %>
      <% else %>
      <%= image_tag 'no_image', size: "500x400" %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<style>

.memory {
  border: 2px;
}


h2 {
  background-color: tan;
  color: lightyellow;
  text-align: center;
}

.memory > h3 {
  margin-top: 20px;
  background-color: #ffefef;
  color: black;
}

.image2 {
 margin-top: 50px;
}
th {
background-color: #ede4cd;
font-size: 15px;
border:solid 1px antiquewhite;
text-align: center;
}

.link {
  text-decoration: none;
  color: #494a41;
}

</style>