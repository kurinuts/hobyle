<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4> </h4>
      <h2><strong>みんなのMemories</strong></h2>
      <% if user_signed_in? %>
      <%= link_to new_memory_path, class: 'btn2 btn-success' do %>New Memories<% end %>
      <% end %>
      <div class="flex">
        <% @memories.each do |memory| %>
        <div class="flex-box">
          <h6 class="p-1"><strong><%= memory.event.title %></strong></h6>
          <% if memory.image.attached? %>
          <%= link_to memory_path(memory) do %><%= image_tag memory.image, size: "190x160" %><% end %>
          <% else %>
          <%= image_tag asset_path('noimage.jpg'), size: "190x160" %>
          <% end %>
          <div class="link py-1">
            <%= link_to memory_path(memory),class: "link" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="bi bi-arrow-right-square" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm4.5 5.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"/></svg>
                <p>
                <strong>
                <%= memory.title %>
                </strong>
                </>
              <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="pagenate">
  <%= paginate @memories %>
</div>


<style>
.flex {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.flex > div {
  margin: 10px;
  background-color: #fff1cf;
  width: 190px;
  height: auto;
  text-align: center;
  justify-content:center; /* 水平方向 */
}

h2 {
  background-color: tan;
  color: lightyellow;
  text-align: center;
}

h6 {
  background-color: tan;
  text-align: center;
  margin: 0px;
}

.btn2 {
    background: #eee;
    border-radius: 3px;
    position: relative;
    display: flex;
    justify-content: space-around;
    max-width: 280px;
    padding: 10px 25px;
    color: #313131;
    transition: 0.3s ease-in-out;
    font-weight: 500;
}

.btn :after {
  content: "";
  position: absolute;
  top: 50%;
  bottom: 0;
  right: 2rem;
  font-size: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: right 0.3s;
  width: 6px;
  height: 6px;
  border-top: solid 2px currentColor;
  border-right: solid 2px currentColor;
  transform: translateY(-50%) rotate(45deg);
}

.btn2:hover {
  background: #6bb6ff;
  color: #FFF;
}
.btn2:hover:after {
  right: 1.4rem;
}


 .link {
  text-decoration: none;
  color: #494a41;
}

</style>
