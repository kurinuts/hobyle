<h4>NEWイベント</h4>
<div class="new-event">
  <%= form_with model: @event, url: events_path do |f| %>
  <table>
    <tr>
      <th>イベントジャンル</th><td></td>
    </tr>
    <tr>
      <th>タイトル</th><td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th>紹介コメント</th><td><%= f.text_field :introduction %></td>
    </tr>

    <tr>
      <%= form_with model: @schedule do |start_time| %>
      <% f.text_field :start_time, class: "form-control datetimepicker-input", id: "start_time", data: {toggle: "datetimepicker", target: "#start_time"} %>
      <th>日にち</th><td><%= f.text_field :day %></td>
      <% end %>
    </tr>
    <tr>
      <th>開始時間</th><td><%= f.text_field :time %></td>
    </tr>
    <tr>
      <th>所要時間</th><td><%= f.text_field :all_time %>時間</td>
    </tr>
    <tr>
      <th>会費</th><td><%= f.number_field :fee %>円</td>
    </tr>
    <tr>
      <th>持ち物</th><td><%= f.text_field :preparation %></td>
    </tr>
    <tr>
      <th>備考</th><td><%= f.text_field :remarks %></td>
    </tr>
    <tr><th>＊備考</th><td><%= f.text_field :remarks2 %></td></tr>
  </table>
   <%= f.submit 'NEWイベント投稿' %>
</div>
<% end %>
