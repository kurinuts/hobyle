<div class="container">
    <div class="row">
      <div class="col-md-6">
        <table class="table">
          <tr><h1> </h1></tr>
          <tr><h2><strong><%= @event.title %></strong></h2></tr>
          <tr>
            <th>日時</th>
            <td><%= @event.title %></td>
          </tr>
          <tr>
            <th>場所</th>
            <td><%= @event.place %></td>
          </tr>
          <tr>
            <th>人数</th>
            <td><%= @event.limit_number %> 人</td>
          </tr>
          <tr>
            <th>時間幅</th>
            <td><%= @event.all_time %> 時間</td>
          </tr>
          <tr>
            <th>会費</th>
            <td><%= @event.fee %> 円程度</td>
          </tr>
          <tr>
            <th>持ち物</th>
            <td><%= @event.preparation %></td>
          </tr>
          <tr>
            <th>備考</th>
            <td><%= @event.remarks %></td>
          </tr>
          <tr>
            <th>備考2</th>
            <td><%= @event.second_remarks %></td>
          </tr>

        </table>
      </div>
      <div class="col-md-6">
        <table class="table", border=1 frame="box">
          <tr>
            <th>プロフィール画像</th>
            <td>
              <% if @event.user.image.attached? %>
              <%= image_tag @event.user.image, size: "100x100" %>
              <% else %>
              <%= image_tag 'no_image', size: "100x100" %>
              <% end %>

            </td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= @event.user.user_name %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @event.user.user_introduction %></td>
          </tr>
        </table>

        <table class="table">
          <tr><h3><strong>参加申請</strong></h3>
          <%= form_with model: @application, url: applications_path, method: :post do |f| %>
          </tr>
          <tr>
            <th>人数</th>
            <td><%= f.number_field :number %>
            <%= hidden_field_tag :number, @application.number %>
            </td>
          </tr>
          <tr>
            <th>コメント</th>
            <td><%= f.text_area :application_comment %>
            <%= hidden_field_tag :application_comment, @application.application_comment %>
            </td>
          </tr>
        </table>
        <input type="submit" style="width: 30%; background-color: darkkhaki; " value="参加する" class="button">
          <% end %>
      </div>
    </div>
  </div>

  <style>
    h2 {
      background-color: darkseagreen;
      color: white;
      text-align: center;
    }

    .button {
      color: lemonchiffon;
      padding: 5px;
      border: 0;
      position: relative;
    }

    .table {
      margin-top: 10px;

    }

    h3 {
      background-color: darkkhaki;
      text-align: center;
      color: lemonchiffon;
      padding: 5px;
      width: 100%;
    }
</style>