<h4><strong>イベント一覧</strong></h4>
<table class="table">
  <tr>
    <th>ジャンル</th>
    <th>サブジャンル</th>
    <th>タイトル</th>
    <th>日時</th>
    <th>予定人数</th>
    <th>開催場所</th>
    <th>会費</th>
    <th>開催ユーザー</th>
  </tr>
  <tr>
    <% @events.each do |event| %>
    <td><%= event.genre_id %></td>
    <td><%= event.secondgenre_id %></td>
    <td><%= link_to event_path(event) do  %><%= event.title %><% end %></td>
    <td><%= event.daytime.strftime('%Y年%m月%d日 %H:%M') %>
    </td>
    <td><%= event.limit_number %> 人</td>
    <td><%= event.place %></td>
    <td><%= event.fee %> 円程度</td>
    <td><%= event.user.user_name %></td>
  </tr>
    <% end %>
</table>