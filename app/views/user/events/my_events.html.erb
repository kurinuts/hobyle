<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h4> </h4>
      <h4>Hello! <%= current_user.user_name %> さん</h4>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h4 class="button1"><strong><%= link_to "趣味活スケジュール", user_path(current_user), :style=>"color: lightyellow;" %></strong></h4>
          </div>
          <div class="col-md-6">
            <h4 class="button2"><strong><%= link_to "企画イベント歴", my_events_path, :style=>"color: lightyellow;" %></strong></h4>
          </div>
        </div>
      </div>
      <table class="table">
        <tr>
          <th>ステータス</th>
          <th>タイトル</th>
          <th>日程</th>
          <th>主催者</th>
          <th></th>
        </tr>
        <% @events.each do |event| %>
        <tr>
          <td>参加前参加済み</td>
          <td><%= event.title %></td>
          <td><%= event.daytime.strftime('%Y年%m月%d日 %H:%M') %></td>
          <td><%= event.user.user_name%></td>
          <td><%= link_to "詳細", event_path(event.id), class: "btn btn-outline-primary btn-block-xs" %></td>
        </tr>
        <% end %>
      </table>

    </div>
    <div class="col-md-5">
      <table class="table", border=1 frame="box">
        <tr>
          <th>プロフィール画像</th>
          <td>
          <% if current_user.image.attached? %>
          <%= image_tag current_user.image, size: "100x100" %>
          <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
          </td>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <td><%= current_user.user_name %><%= current_user.age %></td>
        </tr>
        <tr>
          <th>お住まい</th>
          <td><%= current_user.address_free %> <%= current_user.address %></td>
        </tr>
        <tr>
          <th>自己紹介文</th>
          <td><%= current_user.user_introduction %></td>
        </tr>
      </table>
      <div class="edit">
        <% if current_user %>
        <%= link_to edit_user_path(current_user), class: "btn btn-secondary btn-block" do %>
        <i class="fas fa-user-cog fa-lg"></i>
        <% end %><% end %>
      </div>
    </div>



<style>
img {
  border-radius: 50%;  /* 角丸半径を50%にする(=円形にする) */
  width: 100px;  /* 縦横を同じ値にする */
  height: 100px;  /* 縦横を同じ値にする */
  object-fit: cover; /* 縦横比固定したまま上2つの縦横の範囲内に収まるように配置する */
}

.table {
  margin-top: 10px;
}
.button1 {
  background-color: burlywood;
  color: white;
  text-align: center;
  border-radius: 10%;
}

.button2 {
  background-color: burlywood;
  color: white;
  text-align: center;
  height: 50px;
  padding-top: 10px;
  border-radius: 10%;
}

.link {
  color: white;
}
</style>
